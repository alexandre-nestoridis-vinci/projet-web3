{
  "name": "news-ia-vinci",
  "version": "1.0.0",
  "description": "Site d'actualités avec IA - Projet VINCI",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev:frontend": "cd frontend && ng serve",
    "dev:backend": "cd backend && firebase emulators:start",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "cd frontend && ng build --configuration production",
    "deploy:hosting": "cd frontend && firebase deploy --only hosting",
    "deploy:functions": "cd backend && firebase deploy --only functions", 
    "deploy": "npm run build && npm run deploy:hosting",
    "test:frontend": "cd frontend && ng test",
    "lint:frontend": "cd frontend && ng lint",
    "lint:backend": "cd backend/functions && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandre-nestoridis-vinci/projet-web3.git"
  },
  "keywords": ["angular", "firebase", "ai", "news", "vinci"],
  "author": "Équipe VINCI",
  "license": "MIT"
}